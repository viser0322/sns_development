# Set default values for all following accounts.
defaults
auth off
tls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog on
aliases /etc/aliases
logfile /var/log/msmtp.log

# MailCatcher
account mailcatcher
# MailCatcherのコンテナ名
host sns-mailcatcher
port 1025
from dummy@example.com
user username
password password

# Set a default account
account default : mailcatcher
